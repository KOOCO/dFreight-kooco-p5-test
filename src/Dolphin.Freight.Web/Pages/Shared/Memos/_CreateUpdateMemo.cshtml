@page
@using Dolphin.Freight.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Dolphin.Freight.Web.Pages.Shared.Memos._CreateUpdateMemoModel
@inject IStringLocalizer<FreightResource> L
@{
    Layout = null;
}
<form method="post" action="/Shared/Memos/_CreateUpdateMemo">
    <abp-modal>
        @if (Model.Id == null)
        {
            <abp-modal-header title="@L["Create"]"></abp-modal-header>
        }
        else
        {
            <abp-modal-header title="@L["Update"]"></abp-modal-header>
        }
        <abp-modal-body>
            @if (Model.Id != null)
            {
                <input name="CreateUpdateMemoDto.id" type="hidden" value="@Model.Id" />
            }
            <input name="CreateUpdateMemoDto.sourceId" type="hidden" value="@Model.SourceId" />
            <input name="CreateUpdateMemoDto.fType" type="hidden" value="@Model.FType" />

            <label class="form-label">@L["Display:Memo:THead:Title"]</label>
            <input type="text" name="CreateUpdateMemoDto.subject" value="@Model.MemoSubject" class="form-control valid" id="title" required />
            <label class="form-label">@L["Display:Memo:THead:Content"]</label>
            <textarea name="CreateUpdateMemoDto.content" class="form-control">@Model.MemoContent</textarea>

        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>